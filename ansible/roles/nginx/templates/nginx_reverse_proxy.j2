server {
    listen 80;
    server_name {{ server_name }};

    # Frontend Reverse Proxy
    location /frontend/ {
        #proxy_pass http://{{ frontend }}:{{ frontend_port }}/;
        proxy_pass http://127.0.0.1:{{ frontend_port }}/{{ frontend }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Backend Reverse Proxy
    location /backend/ {
        #proxy_pass http://{{ backend }}:{{ backend_port }}/;
        proxy_pass http://127.0.0.1:{{ backend_port }}/{{ backend }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Database (optional, limited exposure for specific paths)
    location /database/ {
        proxy_pass http://{{ database_host }}:{{ database_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    
    # General error handling
    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
    }
}

